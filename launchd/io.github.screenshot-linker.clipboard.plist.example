<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>io.github.screenshot-linker.clipboard</string>

  <key>ProgramArguments</key>
  <array>
    <string>/Users/YOUR_USER/Library/Application Support/macos-screenshot-linker/screenshot_copy_link.sh</string>
  </array>

  <key>EnvironmentVariables</key>
  <dict>
    <key>SCREENSHOT_DIR</key>
    <string>/Users/YOUR_USER/Pictures/Screenshots</string>
    <key>NOTIFY</key>
    <string>1</string>
  </dict>

  <key>WatchPaths</key>
  <array>
    <string>/Users/YOUR_USER/Pictures/Screenshots</string>
  </array>

  <key>RunAtLoad</key>
  <true/>
</dict>
</plist>
